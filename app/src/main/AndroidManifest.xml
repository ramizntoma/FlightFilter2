<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.flightfilter">

    <!-- Required to receive/send data over UDP -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Required for foreground service to run in background -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />


    <application
        android:allowBackup="true"
        android:label="FlightFilter"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FlightFilter">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Register foreground service -->
        <service
            android:name=".FlarmForwardService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />
        <!-- or use "connectedDevice", "location" if applicable -->

    </application>
</manifest>
